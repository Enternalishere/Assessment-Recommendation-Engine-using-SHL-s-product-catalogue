{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/recommend", "dest": "/api/recommend.js" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
